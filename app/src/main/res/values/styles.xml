<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonForest" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_height">@dimen/value_60dp</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <style name="EditTextApp">
        <item name="android:textColorHint">@color/hint_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">@dimen/value_10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">@dimen/value_50dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>



</resources>
